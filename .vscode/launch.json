{
    // 使用 IntelliSense 了解相关属性。 
    // 悬停以查看现有属性的描述。
    // 欲了解更多信息，请访问: https://go.microsoft.com/fwlink/?linkid=830387
    "version": "0.2.0",
    "configurations": [
        {
            "name": "Python: Current File",
            "type": "python",
            "request": "launch",
            "program": "${file}",
            "console": "integratedTerminal",
            "justMyCode": true
        },
        {
            "name": "Debug",
            "type": "python",
            "request": "launch",
            "program": "${workspaceFolder}/debug.py",
            "args" : ["--cfg", "${workspaceFolder}/configs/config.yaml"],
            "env": {
                "CUDA_LAUNCH_BLOCKING":"1"
            }
        },
        {
            "name": "Train",
            "type": "python",
            "request": "launch",
            "program": "${workspaceFolder}/main.py",
            "args" : ["--cfg", "${workspaceFolder}/configs/config.yaml"],
            "env": {
                "CUDA_LAUNCH_BLOCKING":"1"
            },
            "justMyCode": false
        },
        {
            "name": "Val",
            "type": "python",
            "request": "launch",
            "program": "${workspaceFolder}/main.py",
            "args" : ["--cfg", "${workspaceFolder}/configs/config.yaml", 
                    "--mode", "val", "--save_pred", "--vis"],
            "env": {
                "CUDA_LAUNCH_BLOCKING":"1"
            }
        },
        {
            "name": "Test",
            "type": "python",
            "request": "launch",
            "program": "${workspaceFolder}/main.py",
            "args" : ["--cfg", "${workspaceFolder}/configs/config.yaml", 
                    "--mode", "test", "--vis"],
            "env": {
                "CUDA_LAUNCH_BLOCKING":"1",
                "DISPLAY" : "localhost:10.0"
            }
        },
    ]
}